<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Final_login" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowBackground">@color/accessiblePurple</item>
        <item name="colorOnBackground">@color/accessiblePurple</item>
    </style>

    <style name="Theme.Accessible" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/accessiblePurple</item>
        <item name="android:windowBackground">@color/accessiblePurple</item>
    </style>

    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/accessibleYellow</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:negativeButtonText">@color/black</item>
        <item name="android:positiveButtonText">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>